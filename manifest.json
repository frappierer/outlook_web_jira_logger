{
  "manifest_version": 3,
  "name": "Outlook Meeting Extractor",
  "version": "1.0",
  "description": "Extract meeting details from Outlook web view and log them to JIRA",
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://outlook.office365.com/calendar/view/*"],
      "js": ["libs/jquery-3.6.0.min.js", "content.js"],
      "css": ["styles.css", "content.js"],
      "run_at": "document_end"
    }
  ]
}